{% extends 'base.html.twig' %}

{% block title %}Songs{% endblock %}

{% block body %}
    <h1>Songs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ song.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ song.name }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ song.author }}</td>
            </tr>
            <tr>
                <th>Album</th>
                <td>{{ song.album }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ song.year }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ song.categorie }}</td>
            </tr>
            <tr>
                <th>Image_path</th>
                <td>{{ song.imagePath }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ song.content }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_songs_index') }}">back to list</a>

    <a href="{{ path('app_songs_edit', {'id': song.id}) }}">edit</a>

    {{ include('songs/_delete_form.html.twig') }}
{% endblock %}
